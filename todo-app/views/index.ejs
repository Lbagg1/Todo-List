<!DOCTYPE html>
<html>

<head>
    <title>Todo List</title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <h1>Todo List</h1>
    <form action="/add-task" method="post">
        <input type="text" name="newTask" placeholder="What do you need to do?" required>
        <input type="submit" value="Add Task">
    </form>
    <% if (error) { %>
    <p><%= error %></p>
    <% } %>
    <ul>
        <% tasks.forEach((task, index) => { %>
            <li>
                <div class="task-item">
                    <span class="task-description"><%= task.task %></span>
                    <!-- Add a Delete button/form for each task -->
                    <form action="/delete-task" method="POST" style="margin-bottom: 0;">
                        <input type="hidden" name="taskId" value="<%= task.id %>">
                        <button type="submit" style="background: none; border: none; color: red; cursor: pointer;">‚ùå</button>
                    </form>
                </div>
            </li>
        <% }); %>
    </ul>
</body>

</html>
